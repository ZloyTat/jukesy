- if (!tracks)

  h3 #{displayType}
  p Found nothing

- else if (tracks.length)
  
  - if (showMore)
    a.btn.btn-primary.btn-large.show-more.pull-right(href= showMore) Show more &raquo;
  .btn-group.pull-right
    button.btn.btn-large.play-all Play All
    button.btn.btn-large.dropdown-toggle('data-toggle'= 'dropdown')
      span.caret
    ul.dropdown-menu
      li
        a.play-all Play All
      li
        a.queue-all-next Queue All Next
      li
        a.queue-all-last Queue All Last

  h3 #{displayType}
  .clear

  .tracks
    table.table.table-striped
      thead
        tr
          th.dropdown
          th.play
          th Track
          th Artist
      tbody
    
  - if (loadMore)
    .load-more
      a.btn.btn-primary.btn-large('data-loading-text'= 'Loading...') Load more

- else

  h3 #{displayType}
  | Loading...
  .spinner.pull-right
    .bar1
    .bar2
    .bar3
    .bar4
    .bar5
    .bar6
    .bar7
    .bar8
    .bar9
    .bar10
    .bar11
    .bar12
