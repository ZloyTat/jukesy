- if (!albums)
  h3 #{displayType}
  p Found nothing
  
- else if (albums.length)

  - if (showMore)
    a.btn.btn-primary.btn-large.show-more.pull-right(href= showMore) Show more &raquo;
  h3 #{displayType}
  - if (showMore)
    .clear

  .albums
    ul.thumbnails
  .clear
  
  - if (loadMore)
    .load-more
      a.btn.btn-primary.btn-large('data-loading-text'= 'Loading...') Load more

- else
  h3 #{displayType}
  | Loading...
  .spinner.pull-right
    .bar1
    .bar2
    .bar3
    .bar4
    .bar5
    .bar6
    .bar7
    .bar8
    .bar9
    .bar10
    .bar11
    .bar12
