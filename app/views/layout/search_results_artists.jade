- if (!artists)
  h3 #{displayType}
  p Found nothing

- else if (artists.length)

  - if (showMore)
    a.btn.btn-primary.show-more.pull-right(href= showMore) Show more &raquo;
  h3 #{displayType}
  - if (showMore)
    .clear
    br
  
  .artists
    ul.unstyled
  .clear
  
  - if (loadMore)
    .load-more
      a.btn.btn-primary('data-loading-text'= 'Loading...') Load more

- else
  h3 #{displayType}
  p Loading...