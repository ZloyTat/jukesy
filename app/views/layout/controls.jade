.container
  .row
    .span12
      .controls-left
        .control#prev
          .icon-white.icon-backward
        .control#play-pause
          .icon-white.icon-play
        .control#next
          .icon-white.icon-forward
        .control#volume
          .icon-white.icon-volume-down#volume
        #volume-bar
          .fill

      .controls-middle
        #timer.progress.progress-success.progress-striped
          .track.bar
          .fill

      .controls-right
        .control#repeat.off
          .icon-white.icon-repeat
        .control#shuffle.off
          .icon-white.icon-random
        .control#radio.off
          .icon-white.icon-signal
        .control#fullscreen
          .icon-white.icon-resize-full
