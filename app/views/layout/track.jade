td.dd
  .dropdown
    a.dropdown-toggle('data-toggle'= 'dropdown')
      i.icon-chevron-down
    ul.dropdown-menu
      - if (!track.error)
        li
          a.play-now Play Now
        li.divider
      
      li
        a.remove Remove Track
      
