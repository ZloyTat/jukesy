td.play
  - if (!track.error)
    a.play-now
      .icon-play
  - else
    a
      .icon-exclamation-sign('data-content'= 'No working YouTube videos could be found for this track.', 'data-original-title'= 'Error')

td.name
  a(href= urlTrack(track.get('artist'), track.get('name')))= track.get('name')
  
td.artist
  a(href= urlArtist(track.get('artist')))= track.get('artist')
