//
// Search templates
//

script#search-waitstate-template(type= 'text/x-handlebars-template')
  #search
    .artists
      | Searching for artists "{{query}}"
      .wait
    .clear
    .albums
      | Searching for albums "{{query}}"
      .wait
    .clear
    .tracks
      | Searching for tracks "{{query}}"
      .wait
    .clear

script#search-empty-template(type= 'text/x-handlebars-template')
  .empty No matching {{type}}s.

script#search-artists-template(type= 'text/x-handlebars-template')
  ul

script#search-artist-template(type= 'text/x-handlebars-template')
  .inner
    .img
      {{#if image}}
      img.lastfm(src='{{image}}')
      {{/if}}
    .name {{name}}
    .listeners {{listeners}}

script#search-albums-template(type= 'text/x-handlebars-template')
  ul

script#search-album-template(type= 'text/x-handlebars-template')
  .inner
    .img
      {{#if image}}
      img.lastfm(src='{{image}}')
      {{/if}}
    .name {{name}}
    .artist {{artist}}
    .albumid {{albumid}}

script#search-tracks-template(type= 'text/x-handlebars-template')
  table
    thead
      tr
        td.art
        td.name Track
        td.artist Artist
        td.listeners Listeners
    tbody

script#search-track-template(type= 'text/x-handlebars-template')
  td.avatar
    .img
      {{#if image}}
      img.lastfm(src='{{image}}')
      {{/if}}
  td.name
    .cell {{name}}
  td.artist
    .cell {{artist}}
  td.listeners
    .cell {{listeners}}

//
// Playlist templates
//

script#track-template(type= 'text/x-handlebars-template')
  td.avatar
    .img
      {{#if image}}
      img.lastfm(src='{{image}}')
      {{/if}}
  td.name {{name}}
  td.artist {{artist}}


script#playlists-template(type= 'text/x-handlebars-template')
  .playlists
    {{#unless quick}}
    h2 Playlists
    {{#if empty}}
    p You have not saved any playlists yet.
    {{/if}}
    {{/unless}}
    ul

script#playlist-short-template(type= 'text/x-handlebars-template')
  a.playlist(data-href= '#/local/playlists/{{id}}') {{name}}

script#playlist-short-edit-template(type= 'text/x-handlebars-template')
  a.playlist.edit.active(data-href= '#/local/playlists/{{id}}')
    input.input(name= 'name', type= 'text', value= '{{name}}')

script#playlist-template(type= 'text/x-handlebars-template')
  #playlist
    .header
      h2.name {{name}}
    .tracks
      table
        thead
          tr
            td.art
            td.name Track
            td.artist Artist
        tbody

script#playlist-empty-template(type= 'text/x-handlebars-template')
  #playlist
    .header
      h2.name {{name}}
    .tracks
      table
        thead
          tr
            td.art
            td.name Track
            td.artist Artist
        tbody

