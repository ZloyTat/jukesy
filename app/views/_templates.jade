script#song-info-template(type= 'text/x-handlebars-template')
  div(title= '{{artist}} - {{name}}')
    {{artist}} - {{name}}

script#home-template(type= 'text/x-handlebars-template')
  #home
    p Coming soon - home!

script#settings-template(type= 'text/x-handlebars-template')
  #settings
    p Coming soon - settings!

script#favorites-template(type= 'text/x-handlebars-template')
  #favorites
    p Coming soon - favorites!

script#tag-radio-template(type= 'text/x-handlebars-template')
  #tag-radio
